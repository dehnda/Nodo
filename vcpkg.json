{
    "name": "nodefluxengine",
    "version": "1.0.0",
    "description": "Modern C++20 procedural mesh generation library",
    "dependencies": [
        "eigen3",
        "fmt",
        "opengl",
        "glew"
    ],
    "features": {
        "examples": {
            "description": "Build example applications",
            "dependencies": []
        },
        "gpu": {
            "description": "Enable GPU acceleration with compute shaders",
            "dependencies": [
                "opengl",
                "glew"
            ]
        },
        "tests": {
            "description": "Enable unit testing",
            "dependencies": [
                "gtest"
            ]
        },
        "ui": {
            "description": "Enable UI components for visualization",
            "dependencies": [
                "glfw3",
                "glad",
                {
                    "name": "imgui",
                    "features": [
                        "glfw-binding",
                        "opengl3-binding"
                    ]
                }
            ]
        }
    }
}
