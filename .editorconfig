# EditorConfig is awesome: https://EditorConfig.org
# Consistent coding styles across editors and IDEs

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ files
[*.{cpp,hpp,h,cc,cxx}]
indent_style = space
indent_size = 2
max_line_length = 80

# CMake files
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles
[{Makefile,*.mk}]
indent_style = tab
